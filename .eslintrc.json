{
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "eqeqeq": ["error", "smart"],
    "no-console": "off",
    "no-cond-assign": "off",
    "no-unused-vars": ["error", {
      "vars": "local"
    }]
  },
  "env": {
    "es6": true,
    "browser": true,
    "jquery": true
  },
  "globals": {}
}
