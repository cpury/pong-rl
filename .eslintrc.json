{
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "eqeqeq": ["error", "smart"],
    "no-console": "off",
    "no-cond-assign": "off",
    "no-unused-vars": ["error", {
      "vars": "local"
    }]
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "jquery": true
  },
  "globals": {
    "ga": "readonly",
    "tf": "readonly",
    "Match": "readonly",
    "BaseController": "readonly",
    "DumbController": "readonly"
  }
}
